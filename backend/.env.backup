# ============================================
# Database Configuration
# ============================================
# MySQL Database URL
# Format: mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL="mysql://root:Db@12345@localhost:3306/courtwala"

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_NAME="Supports Court Booking"

# ============================================
# JWT Authentication
# ============================================
# Generate a strong secret key for production
# You can use: openssl rand -base64 32
JWT_SECRET="XgA08hyCEMSOh5tlwGk+l0UQ/9AX+2DGef55iKL5p70="
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Password Hashing
# ============================================
BCRYPT_SALT_ROUNDS=10

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# ============================================
# Email Configuration (Optional)
# ============================================
# For password reset and notifications
# Example for Gmail SMTP:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@courtwala.com

# ============================================
# Google OAuth (Optional - Future Implementation)
# ============================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret